{
    "name": "floeproject.org",
    "version": "2.2.0",
    "description": "FLOE Project Website",
    "scripts": {
        "build": "npm-run-all -l clean -p build:*",
        "build:eleventy": "cross-env NODE_ENV=production eleventy",
        "clean": "rimraf _site",
        "debug": "DEBUG=Eleventy* eleventy",
        "lint": "run-s -l lint:*",
        "lint:css": "stylelint \"**/*.css\"",
        "lint:js": "eslint \"**/*.{js,md}\"",
        "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
        "lint:yml": "eslint \"**/*.yml\"",
        "start": "npm-run-all -l clean -p start:*",
        "start:eleventy": "cross-env NODE_ENV=development eleventy --serve",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fluid-project/floeproject.org.git"
    },
    "keywords": [
        "Floe",
        "Project",
        "Flexible",
        "Learning",
        "Open",
        "Education"
    ],
    "author": "OCAD University <idrc@ocadu.ca>",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/fluid-project/floeproject.org/issues"
    },
    "homepage": "https://github.com/fluid-project/floeproject.org#readme",
    "browserslist": [
        "defaults",
        "not IE 11",
        "not OperaMini all"
    ],
    "dependencies": {
        "@11ty/eleventy": "2.0.1",
        "@11ty/eleventy-navigation": "0.3.5",
        "@11ty/eleventy-plugin-rss": "1.2.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "5.0.0",
        "eleventy-plugin-fluid": "2.4.0",
        "infusion": "4.6.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.7.1",
        "@commitlint/config-conventional": "17.7.0",
        "cross-env": "7.0.3",
        "debug": "4.3.4",
        "eleventy-plugin-sharp": "0.1.1",
        "eslint": "8.47.0",
        "eslint-config-fluid": "2.1.1",
        "eslint-plugin-jsdoc": "46.4.6",
        "eslint-plugin-markdown": "3.0.1",
        "eslint-plugin-yml": "1.8.0",
        "fluid-lint-all": "1.2.9",
        "husky": "8.0.3",
        "image-size": "1.0.2",
        "linkedom": "0.15.1",
        "lint-staged": "14.0.0",
        "markdownlint-cli2": "0.8.1",
        "markdownlint-config-fluid": "0.1.5",
        "npm-run-all": "4.1.5",
        "rimraf": "5.0.1",
        "stylelint": "14.14.0",
        "stylelint-config-fluid": "1.0.0",
        "stylelint-use-logical-spec": "5.0.0"
    },
    "lint-staged": {
        "*.css": "stylelint --fix",
        "*.{js,yml}": "eslint --fix",
        "*.md": [
            "markdownlint-cli2 --fix",
            "eslint --fix"
        ]
    }
}
